<body class="login" bgcolor="PaleGreen" ng-controller="LoginController">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <img src="~/Images/register/oishi_logo_sm.png" class="img-responsive center-block">
                <section class="login_content">
                    <form>
                        <h1>Login</h1>
                        <div>
                            <input type="text" class="form-control" ng-model="main.username" placeholder="Username" required="" />
                        </div>

                        <div>
                            <input type="password" class="form-control" ng-model="main.password" placeholder="Password" required="" />
                        </div>
                        <div class="form-group">
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <a ng-click="signin(main)" class="btn btn-default btn-block alert-success"><span class="fa fa-sign-in"></span> Log In</a>
                            </div>
                            <div class="col-md-6 col-sm-6 col-xs-6">
                                <a href="/Register/register" class="btn btn-default btn-block alert-success"><span class="fa fa-edit"></span> Create an account</a>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <br />
                        <div class="form-group">
                            <div class="col-md-5 col-sm-5col-xs-5">
                                @*<div class="g-signin2" data-onsuccess="onSignIn"></div>*@
                                <google-plus-signin clientid="398506059135-ksocfvjtrc37jn87mhahgsa4lh7nfkbj" language="en">
                                </google-plus-signin>

                            </div>
                        </div>
                    </form>
                        <div class="form-group">
                            <div class="col-md-7 col-sm-7 col-xs-7">
                                <div class="facebook">
                                    @*<fb:login-button  scope="public_profile,email"  data-size="large"  autologoutlink="false" onlogin="checkLoginState();">
                                    Sign in with Facebook
                                     </fb:login-button>*@
                                    <button ng-click="login()"  ng-hide="isLoggedIn" class="btn alert-info navbar-btn">
                                       sign in with Facebook 
                                    </button>
                                </div>
                            </div>
                        </div>
                </section>
                <div id="fb-root">
                </div>
            </div>
        </div>
    </div>
   
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>
    <script src="~/Scripts/angular-sanitize.js"></script>
    <script src="~/Scripts/angular-translate.js"></script>
