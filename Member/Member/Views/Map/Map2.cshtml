    <div class="row">
        <div class="col-md-8 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div ng-controller="MapController">
                    <div id="map" style="width:100%"></div>
                    <marker animation="DROP" position="current-location"></marker>
                    <div id="repeat" ng-repeat="marker in markers | orderBy : 'title'">
                        <a id="country_container" href="#" ng-click="openInfoWindow($event, marker)">
                            <label id="names">{{marker.title}}</label>
                        </a>
                    </div>
                </div>
            </div>           
        </div>
        <!-- END GOOGLE WORLD MAP-->
    </div>

  

