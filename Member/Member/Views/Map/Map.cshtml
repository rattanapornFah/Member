
<div class="row">
    <div class="col-md-8 col-sm-12 col-xs-12">
        <div class="x_panel">
            <ul id="tabs">
                <li><a ng-click="" title="tab1">{{ 'SortByLocation' | translate }}</a></li>
                <li><a ng-click="mapByName()" title="tab2">{{ 'SortByName' | translate }}</a></li>
            </ul>
            <div class="google-maps">
                <iframe src="http://localhost:51813/Map/Map2"
                        width="735" height="455" frameborder="0" style="border:0"></iframe>
            </div>
        </div>
    </div>
    <!-- END GOOGLE WORLD MAP-->

    <div class="col-md-4 col-sm-12 col-xs-12">
        <div class="x_panel" style="height:513px">
            @*  <div class="x_title">
                    <h4>Map <small>Sort By Location</small></h4>
                    <div class="clearfix"></div>
                </div>  *@
            <div class="x_content" id="scrollArea">
                <div ng-repeat="myWelcomes in myWelcome | orderBy:myWelcomes.storeName">
                    <div class="row">
                        <div class="timeline-item-content" style="width: 100%; height: 100px">
                            <div class="timeline-heading">
                                <h5 style="color:darkred"><strong>&nbsp;{{myWelcomes.storeName}}</strong></h5>
                            </div>
                            @*<a href="">*@
                            <div class="timeline-body" style="text-align:center" ng-click="infor(myWelcomes.storeId)">
                                <img src={{PathImage+myWelcomes.storeImg0}} class="img-text" width="150" align="left" />
                                <p> {{myWelcomes.storeAddress1}}{{myWelcomes.storeAddress2}}</p>
                                @*<p> </p>*@

                                <button style="border-radius:14px;" ng-click="infor(myWelcomes.storeId)">{{ 'Readmore' | translate }}</button>
                                <div class="timeline-footer">
                                    @*<h5 href="" ng-click="infor({{myWelcomes.storeId}})"><strong>{{ 'Readmore' | translate }}</strong></h5>*@
                                    <h6 class="pull-right" style="color:darkgreen"><strong>{{myWelcomes.distanceText}}</strong></h6>
                                </div>                       
                            </div>
                            @*</a>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<style>
    .google-maps {
        position: relative;
        padding-bottom: 68%;
        // This is the aspect ratio height: 0;
        overflow: hidden;
    }

        .google-maps iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100% !important;
            height: 100% !important;
        }

    #scrollArea {
        height: 500px;
        overflow: auto;
    }
</style>


