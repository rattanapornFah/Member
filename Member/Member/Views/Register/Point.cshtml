<style>
    #head {
        color: #333;
        background-color: darkred;
        border-color: #5c5151;
    }

</style>


        <h3 style="color:darkred">Your cards 
        <span class="pull-right" >
        <img src="~/Images/point/button_add.png" style="height:35px;" onclick="parent.location='#/Card'"> </span></h3>
   
    <div class="row" ng-controller="PointController">
        <div class="panel-body list-group-item" ng-repeat="detail in memberDetails" >
            
                <div class="col-md-5 col-sm-6">
                    <div class="widget-item-left">

                        <div class="timeline-item-content">


                            @*<section class="container">
                        <div class="card pull-right" onclick="flip()">*@
                            <div class="front">

                                <img src="~/Images/point/card4.png" class="img-responsive img-thumbnail img-rounded">
                            </div>
                            @*<div class="back">
                                    <img src="~/Images/card/cards-barcode.png" class="img-text img-responsive">
                                </div>
                            </div>

                        </section>*@

                        </div>
                    </div>
                </div>

                <div class="col-md-7 col-sm-6 ">
                    <div class="widget-item-right">
                        <div class="text-left">
                            <h4>
                                <span class="fa fa-user" style="color:black"> Card Number :</span> {{detail.cardNo}}
                            </h4>
                            <h4>
                                <span class="fa fa-credit-card" style="color:black"> Card Name :</span> {{detail.cardTypeName}}
                            </h4>
                            <h4>
                                <span class="fa fa-heart" style="color:black"> Points :</span> {{detail.cardPoint}}
                            </h4>
                            <h4>
                                <span class="fa fa-btc" style="color:black"> Balance :</span> {{detail.cardBalance}}
                            </h4>
                            <h4>
                                <span class="fa fa-clock-o" style="color:black"> Activate Date :</span> {{detail.cardActivateDate}}
                            </h4>
                            <h4>
                                <span class="fa fa-clock-o" style="color:black"> Expire date :</span> {{detail.cardExpireDate}}
                            </h4>
                        </div>
                    </div>
                    <button class="btn btn-info" data-toggle="modal" data-target="#modal_basic">   QR code  </button>
                    <button class="btn btn-info" data-toggle="modal" data-target="#modal_basic2">  Barcode  </button>
                </div>

                </div>
            </div>
   
   


<div class="modal" id="modal_basic" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" align="center">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead">QR code</h4>
            </div>
            <div class="modal-body">
                <img src="~/Images/point/QRcode-card.png" class="img-responsive">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modal_basic2" tabindex="-1" role="dialog" aria-labelledby="defModalHead" aria-hidden="true" align="center">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="defModalHead">Barcode</h4>
            </div>
            <div class="modal-body">
                <img src="~/Images/point/Barcode-card.png" class="img-responsive" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
     function flip() {
     $('.card').toggleClass('flipped');
     }
</script>
